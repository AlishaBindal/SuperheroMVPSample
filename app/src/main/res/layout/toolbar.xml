<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbarMessages"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/color_FFFFFF">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/toolbar_icon_padding"
        android:src="@drawable/ic_back"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextView.Color_373737.Font_16sp"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dimen_60dp"
        android:layout_marginEnd="@dimen/dimen_60dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2" />

    <View
        android:id="@+id/toolbarLine"
        style="@style/horizontal_line"
        android:layout_alignParentBottom="true" />

</RelativeLayout>